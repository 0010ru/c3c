{
  "version": "0.1.0",
  "authors": [
    "John Doe <john.doe@example.com>"
  ],
  "langrev": "1",
  "warnings": [
    "no-unused"
  ],
  // sources compiled
  "sources": [
    "./**"
  ],
  "dependency-search-paths": [ "./lib" ],
  "dependencies": ["clib"],

  "features": ["ABCD"],

  // c sources
  "targets": {
    "hello_world": {
      "type": "executable",
      "c-sources-override": [
        "./csource/**"
      ],
      "reloc": "PIE",
    },
    "hello_world_win32": {
      "type": "executable",
      "cc" : "cl.exe",
      "c-sources-override": [
      ]
    },
    "hello_world_lib": {
      "type": "static-lib",
      "c-sources-override": [
        "./csource/**"
      ]
    },
    "hello_world_win32_lib": {
      "type": "static-lib",
    }
  },
}